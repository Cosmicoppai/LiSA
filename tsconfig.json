{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "noEmit": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "backend"]
}
